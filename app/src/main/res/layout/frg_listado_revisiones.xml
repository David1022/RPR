<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="vertical" >

        <TextView
            style="@style/texto_titulo"
            android:id="@+id/inspeccion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="@string/revisiones"
            android:gravity="center" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_margin_detalle_inspeccion"
            android:layout_marginRight="@dimen/dim_margin_detalle_inspeccion"
            android:minHeight="@dimen/separadores"
            android:background="@color/separadores"/>


        <ListView
            android:id="@+id/listadoRevisiones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/botonNuevaRevision"
            style="@style/botones"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:drawablePadding="@dimen/dim_padding_imagen_boton"
            android:text="@string/boton_incluir_nueva_revision" />

    </LinearLayout>

</LinearLayout>