<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.nipsa.rpr.DialogoDefectosAsociados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="150dp"
    android:orientation="vertical">

    <TextView
        style="@style/texto_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/titulo_defectos_asociados"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titCodigoDefecto"
            style="@style/texto_pop_up"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="Código"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/titDescripcionDefecto"
            style="@style/texto_pop_up"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="Descripción"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/titMedidaDefecto"
            style="@style/texto_pop_up"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="Medida"
            android:gravity="center_horizontal" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_margin_detalle_inspeccion"
        android:layout_marginTop="@dimen/dim_margin_detalle_inspeccion"
        android:minHeight="1dp"
        android:background="@color/negro"/>

    <ListView
        android:id="@+id/listDefectosAsociados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

</LinearLayout>