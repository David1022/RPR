<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTituloAlertaEliminar"
        style="@style/texto_alerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="@dimen/dim_titulo_alerta"
        android:paddingBottom="@dimen/dim_titulo_alerta"
        android:text="@string/titulo_confirmar_eliminar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAlerta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_gravity="center"
            android:src="@drawable/ic_alert"/>

        <TextView
            android:id="@+id/tvAlertaEliminar"
            style="@style/texto_alerta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:text="@string/texto_confirmar_eliminar"/>

    </LinearLayout>

</LinearLayout>